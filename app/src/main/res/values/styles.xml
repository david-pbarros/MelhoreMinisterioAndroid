<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <!--
      Base application theme, dependent on API level. This theme is replaced
      by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
  -->
  <!-- Application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="colorAccent">@color/accent</item>

    <item name="android:textAppearanceLarge">@style/AppTheme.TextAppearanceLarge</item>
    <item name="textAppearanceSemiLarge">@style/AppTheme.TextAppearanceSemiLarge</item>
    <item name="android:textAppearance">@style/AppTheme.TextAppearance</item>
    <item name="android:textAppearanceMedium">@style/AppTheme.TextAppearance</item>
    <item name="android:textAppearanceSmall">@style/AppTheme.TextAppearance</item>


    <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
    <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
  </style>

  <style name="AppTheme.TextAppearance">
    <item name="android:textColor">@color/text_default</item>
    <item name="android:textSize">@dimen/TextAppearanceSize</item>
  </style>

  <style name="AppTheme.TextAppearanceLarge">
    <item name="android:textColor">@color/text_default</item>
    <item name="android:textSize">@dimen/TextAppearanceLargeSize</item>
  </style>

  <style name="AppTheme.TextAppearanceSemiLarge">
    <item name="android:textColor">@color/text_default</item>
    <item name="android:textSize">@dimen/TextAppearanceSemiLargeSize</item>
  </style>

  <style name="AppTheme.TextBlack">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">@dimen/TextBlackSize</item>
  </style>

  <style name="AppTheme.TextAppearance.label">
    <item name="android:textSize">@dimen/TextLabelSize</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="AppTheme.loginBox">
    <item name="android:background">@drawable/radius_back</item>
    <item name="android:paddingBottom">5dp</item>
    <item name="android:paddingTop">20dp</item>
    <item name="android:paddingLeft">20dp</item>
    <item name="android:paddingRight">20dp</item>
  </style>

  <style name="AppTheme.LoginBoxText" parent="AppTheme.TextAppearance.label">
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="AppTheme.loginBoxButton">
    <item name="android:background">@color/button_back_login</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="spinner_style" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    <item name="android:textAppearance">@style/AppTheme.TextAppearance</item>
    <item name="android:textSize">@dimen/TextSpinnerItemSize</item>
  </style>

  <!-- Dialog Itens -->
  <style name="AppTheme.Dialog" parent="@style/AppTheme">
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowCloseOnTouchOutside">true</item>
    <item name="android:alertDialogStyle">@style/AppTheme.Dialog.Style</item>
    <item name="android:windowBackground">@drawable/dialog_background</item>

    <item name="android:textAppearanceLarge">@style/AppTheme.TextAppearance.Black</item>
    <item name="android:textAppearanceMedium">@style/AppTheme.TextAppearance.Black</item>
    <item name="android:textAppearanceSmall">@style/AppTheme.TextAppearance.Black</item>
  </style>

  <style name="AppTheme.Dialog.Style" parent="@android:style/Theme.Holo.Dialog">
    <item name="android:topDark">@drawable/dialog_title</item>
    <item name="android:bottomDark">@drawable/dialog_footer</item>
    <item name="android:bottomBright">@drawable/dialog_footer</item>
    <item name="android:bottomMedium">@drawable/dialog_footer</item>
    <item name="android:centerDark">@drawable/dialog_body</item>
  </style>

  <style name="AppTheme.TextAppearance.Black">
    <item name="android:textColor">@android:color/black</item>
  </style>
  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
  <!-- Dialog Itens / -->
</resources>